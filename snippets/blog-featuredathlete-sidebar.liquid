      <h4>Athletes Posts</h4>

      <ul class="blog_list">

        {% for article in blogs[blog-featuredathlete-sidebar].articles limit:10 %}
          <li>
            <a href="{{ article.url }}" title="{{ article.title | escape }}">{{ article.title }}</a>
            {% if settings.blog_date %}
              <div class="meta">
                <span class="label">{{ article.published_at | date: format: "month_day_year" }}</span>
              </div>
            {% endif %}
          </li>
        {% endfor %}

      </ul>




      {% if settings.display_recent_articles %}
        <!-- <h4>{{ 'blogs.sidebar.recent_articles' | t }}</h4>       -->
        <h4>Featured Athletes</h4>
        <ul class="blog_list recent_articles">

          {% for article in blogs[blog-featuredathlete-sidebar].articles limit:10 %}
            <li class="featured-athlete">
              
                <div class="featured-athlete-contents">

                  {% if article.image %}
                  <a class="featured-athlete-name-image-link" href="{{ article.url }}" title="{{ article.title | escape }}">
                  <div class="featured-athlete-image-container">
                    <img class="featured-athlete-image" src="{{ article.image | img_url: 'master' }}" alt="{{ article.title | escape }}" />
                  </div>
                  </a>
                  {% endif %}
                  
                  <div class="featured-athlete-details">
                    <a class="featured-athlete-name-link" href="{{ article.url }}" title="{{ article.title | escape }}"><span class="featured-athlete-details-name">{{ article.title }}</span></a>
                  </div>

                </div>
              </a>
              
              <!--
              {% if settings.blog_date %}
                <div class="meta">
                  <span class="label">{{ article.published_at | date: format: "month_day_year" }}</span>
                </div>
              {% endif %}
              -->
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    
    
